{% liquid
  assign instagram_list = section.settings.instagram_list
  assign posts = null
  assign max_items = section.settings.post_limit

  if instagram_list != blank
    for list_item in instagram_list
      assign posts = list_item.posts.value
      break
    endfor
  endif
%}

<div class="section-background color-{{ section.settings.color_scheme }}"></div>

<div
  class="
    section
    section--{{ section.settings.section_width }}
    color-{{ section.settings.color_scheme }}
    section-resource-list
    spacing-style
    gap-style
  "
  style="
    {% render 'spacing-style', settings: section.settings %}
    {% render 'gap-style', value: section.settings.gap %}
  "
>
  <div class="section-resource-list__content">
    {%- content_for 'blocks' -%}
  </div>

  {% if posts == blank %}
    {% comment %} Create placeholder posts for theme editor {% endcomment %}
    {% assign posts = '' %}
    {% for i in (1..max_items) %}
      {% assign posts = posts | append: ', ' %}
    {% endfor %}
    {% assign posts = posts | split: ',' %}
  {% endif %}

  {% capture list_items %}
    {% for post in posts limit: max_items %}
      <div class="resource-list__item">
        {% content_for 'block', 
          id: 'static-instagram-post-card', 
          type: 'instagram-post-card', 
          closest.metaobject.nn_instagram_post: post
        %}
      </div>
      {% unless forloop.last %}
        <!--@list/split-->
      {% endunless %}
    {% endfor %}
  {% endcapture %}

  {% liquid
    assign list_items_array = list_items | strip | split: '<!--@list/split-->'
  %}

  {% render 'resource-list',
    list_items: list_items,
    list_items_array: list_items_array,
    settings: section.settings,
    carousel_ref: 'instagramCarousel',
    slide_count: max_items,
    content_type: 'instagram-posts',
    test_id: 'instagram-carousel-list'
  %}
</div>


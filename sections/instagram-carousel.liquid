<style>
  /* Center carousel navigation on the image, not the whole card */
  .instagram-carousel .resource-list__carousel {
    position: relative;
  }

  .instagram-carousel .resource-list__carousel slideshow-arrows {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: auto;
    pointer-events: none;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding-inline: var(--util-page-margin-offset);
    height: var(--instagram-image-height, 400px);
  }

  .instagram-carousel .resource-list__carousel slideshow-arrows button {
    pointer-events: auto;
  }
</style>

<script>
  // Set arrow height to match image height
  (function () {
    function updateArrowPosition() {
      const carousel = document.querySelector('.instagram-carousel .resource-list__carousel');
      if (!carousel) return;

      const firstImage = carousel.querySelector('.instagram-post-image');
      if (!firstImage) return;

      const imageHeight = firstImage.offsetHeight;
      carousel.style.setProperty('--instagram-image-height', `${imageHeight}px`);
    }

    // Update on load
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', updateArrowPosition);
    } else {
      updateArrowPosition();
    }

    // Update on resize
    let resizeTimer;
    window.addEventListener('resize', () => {
      clearTimeout(resizeTimer);
      resizeTimer = setTimeout(updateArrowPosition, 100);
    });

    // Update in theme editor
    if (window.Shopify && window.Shopify.designMode) {
      document.addEventListener('shopify:section:load', updateArrowPosition);
    }
  })();
</script>

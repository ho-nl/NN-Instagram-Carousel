{% assign post = closest.metaobject['instagram-post'] %}

{% liquid
  if post == blank
    assign display_username = 'johndoe'
    assign display_name = 'John Doe'
    assign display_profile_pic = blank
  else
    assign display_username = post.username.value
    assign display_name = post.displayName.value
    assign display_profile_pic = post.profile.value
  endif
%}

<div
  class="instagram-post-profile"
  data-block-id="{{ block.id }}"
  style="
    padding-block-start: {{ block.settings['padding-block-start'] }}px;
    padding-block-end: {{ block.settings['padding-block-end'] }}px;
  "
  {{ block.shopify_attributes }}
>
  <div class="instagram-post-profile__inner">
    <div class="instagram-post-profile__avatar">
      {% if display_profile_pic != blank %}
        <img
          src="{{ display_profile_pic | image_url: width: 80 }}"
          alt="{{ display_name | escape }}"
          width="40"
          height="40"
          loading="lazy"
        >
      {% else %}
        <div class="instagram-post-profile__avatar-placeholder">
          <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 3c1.66 0 3 1.34 3 3s-1.34 3-3 3-3-1.34-3-3 1.34-3 3-3zm0 14.2c-2.5 0-4.71-1.28-6-3.22.03-1.99 4-3.08 6-3.08 1.99 0 5.97 1.09 6 3.08-1.29 1.94-3.5 3.22-6 3.22z"/>
          </svg>
        </div>
      {% endif %}
    </div>

    <div class="instagram-post-profile__text">
      {% if display_name != blank %}
        <p class="instagram-post-profile__name">{{ display_name }}</p>
      {% endif %}

      {% if display_username != blank %}
        <p class="instagram-post-profile__handle">@{{ display_username }}</p>
      {% endif %}
    </div>
  </div>
</div>

{% stylesheet %}
  .instagram-post-profile {
    display: block;
  }

  .instagram-post-profile__inner {
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .instagram-post-profile__avatar {
    flex-shrink: 0;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    overflow: hidden;
    background: var(--color-background-secondary, #f5f5f5);
  }

  .instagram-post-profile__avatar img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .instagram-post-profile__avatar-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .instagram-post-profile__avatar-placeholder svg {
    width: 24px;
    height: 24px;
    fill: var(--color-foreground-secondary, #999);
  }

  .instagram-post-profile__text {
    display: flex;
    flex-direction: column;
    gap: 2px;
    min-width: 0;
  }

  .instagram-post-profile__name {
    margin: 0;
    font-weight: 600;
    font-size: 14px;
    line-height: 1.4;
    color: var(--color-foreground, #000);
  }

  .instagram-post-profile__handle {
    margin: 0;
    font-size: 12px;
    line-height: 1.4;
    color: var(--color-foreground-secondary, #666);
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Instagram Post Profile",
  "tag": null,
  "settings": [
    {
      "type": "paragraph",
      "content": "Displays profile picture, display name, and username from parent Instagram post"
    },
    {
      "type": "header",
      "content": "t:content.padding"
    },
    {
      "type": "range",
      "id": "padding-block-start",
      "label": "t:settings.top",
      "min": 0,
      "max": 48,
      "step": 2,
      "unit": "px",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding-block-end",
      "label": "t:settings.bottom",
      "min": 0,
      "max": 48,
      "step": 2,
      "unit": "px",
      "default": 12
    }
  ]
}
{% endschema %}
